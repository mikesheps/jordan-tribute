@import 'normalize'

slab = 'roboto slab'
condensed = 'roboto condensed'
heavy = 'impact'

* {
    //border: 1px solid magenta;
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

:root {
  font-size: 20px;
}

body {
  font-family: 'roboto slab';
  line-height: 1.5;
}


//Resets
a {
  text-decoration: none;
}

img {
  max-width: 100%
}

ul, ol {
  margin: 0;
  padding: 0;
}

p {
  margin-bottom: 1rem;
}


.header {
  background-color: red;
}

.header__container {
  align-items: center;
  display: flex;
  height: 200px;
  margin: 0 auto;
  width: 960px;
}

.header__logo {
}

.header__logo svg {
  fill: white;
  width: 125px;
}

.header__slogan {

}

.header__slogan h1 {
  color: white;
  font-family: Impact;
  font-size: 2.8rem;
  padding-left: 20px;
  text-shadow: 3px 3px 0 black;
  text-transform: uppercase;
}

.nav {

}

.nav__container {
  margin: 0 auto;
  width: 960px;
}

.nav__items {
  display: flex;
  justify-content: space-between;
  list-style: none;
}

.nav__link {
  color: red;
  display: block;
  font-family: 'roboto condensed';
  padding: 20px;

}

.nav__link:hover {
  background-color: red;
  color: white;
}

.feature__layer {
  background-image: url(img/wings.jpg);
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 560px;
}

.feature__quote {
  max-width: 700px;
  text-align: center;
  transform: translateY(9rem);
}

.feature__highlight {
  background-color: white;
  box-shadow: 24px 0 0 0 white, -24px 0 0 0 white;
  display: inline;
  font-family: Impact;
  font-size: 2.5rem;
  padding: 12px 0;
  line-height: 3.5rem;
}
